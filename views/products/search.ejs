<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs', {pageTitle: 'Search Products'}) %>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <section class="main-section2">
            <h2>Resultados</h2>
            <div class="div-art2">
            <% for (let i = 0; i<list.length; i++) {%>                    
            <article class="section2-art">
                <a href="/product/<%= list[i].id %>">
                    <img src="images/<%= list[i].image %>" alt="">
                    <div class="art-text">
                    <h3><%= '$ ' + list[i].price %></h3>
                    <span><%= list[i].name %></span> 
                </a>
            </article>
            <% } %>            
            </div>                                                        
        </section>

    </main>

    <%- include('../partials/footer.ejs') %>

</body>    

</html>